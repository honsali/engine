<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1165870106-0" author="app_core">
        <createSequence sequenceName="seq_question" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="1165870106-1" author="app_core">
        <createTable tableName="question">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="code" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="titre" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="position" type="int">
                <constraints nullable="true" />
            </column>
            <column name="autre_option" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="autre_libelle" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="min" type="double">
                <constraints nullable="true" />
            </column>
            <column name="max" type="double">
                <constraints nullable="true" />
            </column>
            <column name="precision" type="int">
                <constraints nullable="true" />
            </column>
            <column name="type_reponse_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="rubrique_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1165870106-data" author="app_core">
        <loadData
            file="liquibase/data/question.csv"
            separator=";"
            tableName="question"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="code" type="nvarchar(250)" />
            <column name="titre" type="nvarchar(250)" />
            <column name="description" type="nvarchar(250)" />
            <column name="position" type="int" />
            <column name="autre_option" type="boolean" />
            <column name="autre_libelle" type="nvarchar(250)" />
            <column name="min" type="double" />
            <column name="max" type="double" />
            <column name="precision" type="int" />
            <column name="type_reponse_id" type="numeric" />
        </loadData>
    </changeSet>
</databaseChangeLog>