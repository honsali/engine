    <changeSet id="506653739-0" author="app_core">
        <createSequence sequenceName="seq_document_ged" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="506653739-1" author="app_core">
        <createTable tableName="document_ged">
            <column name="id" type="bigint">
