                <constraints nullable="true" />
            </column>
            <column name="code_document" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="reference_document" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="code_famille" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="mime_type" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="numero_page" type="int">
                <constraints nullable="true" />
            </column>
            <column name="instance_ged" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="nombre_total_page" type="int">
                <constraints nullable="true" />
            </column>
            <column name="page_url" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="506653739-data" author="app_core">
        <loadData
            file="liquibase/data/documentGed.csv"
            separator=";"
            tableName="document_ged"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="id_document" type="int" />
            <column name="code_document" type="nvarchar(250)" />
            <column name="reference_document" type="nvarchar(250)" />
