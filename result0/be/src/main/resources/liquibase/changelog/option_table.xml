<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1010136971-0" author="app_core">
        <createSequence sequenceName="seq_option" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="1010136971-1" author="app_core">
        <createTable tableName="option">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="code" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="valeur" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="libelle" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="position" type="int">
                <constraints nullable="true" />
            </column>
            <column name="question_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1010136971-data" author="app_core">
        <loadData
            file="liquibase/data/option.csv"
            separator=";"
            tableName="option"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="code" type="nvarchar(250)" />
            <column name="valeur" type="nvarchar(250)" />
            <column name="libelle" type="nvarchar(250)" />
            <column name="position" type="int" />
        </loadData>
    </changeSet>
</databaseChangeLog>