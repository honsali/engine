<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="921324159-0" author="app_core">
        <createSequence sequenceName="seq_historique_etat" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="921324159-1" author="app_core">
        <createTable tableName="historique_etat">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_effet" type="date">
                <constraints nullable="true" />
            </column>
            <column name="commentaire" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="etat_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="motif_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="gestionnaire" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="nom_entite" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="id_entite" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="921324159-data" author="app_core">
        <loadData
            file="liquibase/data/historiqueEtat.csv"
            separator=";"
            tableName="historique_etat"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="date_effet" type="date" />
            <column name="commentaire" type="nvarchar(250)" />
            <column name="etat_id" type="numeric" />
            <column name="motif_id" type="numeric" />
            <column name="gestionnaire" type="nvarchar(250)" />
            <column name="nom_entite" type="nvarchar(250)" />
            <column name="id_entite" type="nvarchar(250)" />
        </loadData>
    </changeSet>
</databaseChangeLog>