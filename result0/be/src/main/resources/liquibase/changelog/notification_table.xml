<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="595233003-0" author="app_core">
        <createSequence sequenceName="seq_notification" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="595233003-1" author="app_core">
        <createTable tableName="notification">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="message" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="utilisateur" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="active" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="type_notification_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="date_creation" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="createur" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="595233003-data" author="app_core">
        <loadData
            file="liquibase/data/notification.csv"
            separator=";"
            tableName="notification"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="message" type="nvarchar(250)" />
            <column name="utilisateur" type="nvarchar(250)" />
            <column name="active" type="boolean" />
            <column name="type_notification_id" type="numeric" />
            <column name="date_creation" type="nvarchar(250)" />
            <column name="createur" type="nvarchar(250)" />
        </loadData>
    </changeSet>
</databaseChangeLog>