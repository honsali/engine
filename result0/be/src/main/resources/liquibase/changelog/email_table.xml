<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="96619420-0" author="app_core">
        <createSequence sequenceName="seq_email" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="96619420-1" author="app_core">
        <createTable tableName="email">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="adresse_mail" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="cc" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="cci" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="expediteur_code" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="objet" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="message" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="document_ged_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="cible" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="96619420-data" author="app_core">
        <loadData
            file="liquibase/data/email.csv"
            separator=";"
            tableName="email"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="adresse_mail" type="nvarchar(250)" />
            <column name="cc" type="nvarchar(250)" />
            <column name="cci" type="nvarchar(250)" />
            <column name="expediteur_code" type="nvarchar(250)" />
            <column name="objet" type="nvarchar(250)" />
            <column name="message" type="nvarchar(250)" />
            <column name="document_ged_id" type="numeric" />
            <column name="cible" type="nvarchar(250)" />
        </loadData>
    </changeSet>
</databaseChangeLog>