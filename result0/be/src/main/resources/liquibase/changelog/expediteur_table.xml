<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="485936453-0" author="app_core">
        <createSequence sequenceName="seq_expediteur" startValue="1050" incrementBy="50" />
    </changeSet>
    <changeSet id="485936453-1" author="app_core">
        <createTable tableName="expediteur">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="code" type="nvarchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="libelle" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="description" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="actif" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="type_expediteur_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="ville_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="telephone" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="email" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="adresse" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
            <column name="region" type="nvarchar(250)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="485936453-data" author="app_core">
        <loadData
            file="liquibase/data/expediteur.csv"
            separator=";"
            tableName="expediteur"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="code" type="nvarchar(250)" />
            <column name="libelle" type="nvarchar(250)" />
            <column name="description" type="nvarchar(250)" />
            <column name="actif" type="nvarchar(250)" />
            <column name="type_expediteur_id" type="numeric" />
            <column name="ville_id" type="numeric" />
            <column name="telephone" type="nvarchar(250)" />
            <column name="email" type="nvarchar(250)" />
            <column name="adresse" type="nvarchar(250)" />
            <column name="region" type="nvarchar(250)" />
        </loadData>
    </changeSet>
</databaseChangeLog>